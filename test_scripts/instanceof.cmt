class ParentClass
{

}

class ChildClass : ParentClass
{

}

var parent = ParentClass()
var child = ChildClass()

assert(parent instanceof ParentClass, "Expect parent to be instanceof ParentClass")
assert(child instanceof ParentClass, "Expect child to be instanceof ParentClass")
assert(child instanceof ChildClass, "Expect child to be instanceof ChildClass")
assert(child instanceof Object, "Expect child to be instanceof Object")
assert(!child instanceof Exception, "Expect child not to be instanceof Exception")
assert("this is a string" instanceof Object, "Expect a literal string to be instanceof Object")
assert("this is a string" instanceof String, "Expect a literal string to be instanceof String")
assert(1 instanceof Number, "Expect literal number to be an instance of a Number class")
print("instanceof test passed!")
